<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Button"
            android:id="@+id/header_imageButton_toggle"
            android:layout_alignParentTop="false" android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/header_textView_caption" android:src="@drawable/ic_navigation_collapse"
            android:adjustViewBounds="false" android:background="@android:color/transparent"
            />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_imageView_logo" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
            android:src="@drawable/ic_triangle_top" android:focusableInTouchMode="false"
            android:layout_marginTop="10dp" android:layout_marginLeft="5dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visit http://www.triangle.io to use this technology free of charge in your own apps."
            android:id="@+id/header_textView_caption"
            android:layout_alignBaseline="@+id/header_imageView_logo" android:layout_toRightOf="@+id/header_imageView_logo"
            android:layout_toLeftOf="@id/header_imageButton_toggle"
            android:layout_marginTop="17dp" android:layout_marginLeft="5dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/header_imageView_device"
            android:layout_below="@+id/header_imageView_logo" android:layout_centerHorizontal="true"
            android:src="@drawable/ic_device_and_card" android:longClickable="true" android:layout_marginTop="25dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="To scan your card, hold it to the back of the device for a few seconds."
            android:id="@+id/header_textView_instructions" android:layout_centerHorizontal="true"
            android:layout_below="@+id/header_imageView_device"
            android:textAppearance="@android:style/TextAppearance.Large" android:gravity="center"
            android:layout_marginTop="10dp"/>
</RelativeLayout>